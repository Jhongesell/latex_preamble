\ProvidesPackage{sty/general}

% Permite requerir un paquete solo si existe
\newcommand*\RequirePackageIfPresent[2][]{%
  \IfFileExists{#2.sty}{
    \RequirePackage[#1]{#2}
  }{\PackageWarning{\@currname}{Cannot find package #2}}%
}

% Reseteo de numeración en pies de página
\RequirePackage{perpage}
\MakePerPage{footnote}

% Para arreglar los gráficos dentro de itemize
\RequirePackageIfPresent[justification=centering]{caption}

% Para separar correctamente las palabras
\RequirePackageIfPresent[spanish]{babel}

% Este paquete permite poner acentos y eñes usando codificación utf-8
\RequirePackageIfPresent[utf8]{inputenc}

% Lista numerada
\RequirePackage{enumerate}

% Para referencias cruzadas
\RequirePackageIfPresent{hyperref}

% Para incluir imagenes
\RequirePackageIfPresent{graphicx}

% Para utilizar subfiguras
\RequirePackageIfPresent{subcaption}

% Imágenes tikz con gnuplot (puede requerir recompilado de gnuplot)
\RequirePackageIfPresent{gnuplot-lua-tikz}

% Parrafo nuevo ya no tiene sangrado de la primera linea
\RequirePackageIfPresent{parskip}

% Importar data desde un archivo externo
\RequirePackageIfPresent{datatool}

\endinput